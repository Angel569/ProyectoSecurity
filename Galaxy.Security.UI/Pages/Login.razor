@page "/login"
@inject IToastService ToastService
<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <i class="bi bi-clipboard-check-fill"></i>
            <h2>Sistema de Reclamos</h2>
            <p>Ingrese sus credenciales para continuar</p>
        </div>

        <EditForm Model="UserModel" OnValidSubmit="OnLogin" OnInvalidSubmit="OnInvalidLogin" class="login-form">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="username">
                    <i class="bi bi-person-fill"></i>
                    Usuario
                </label>
                <input id="username"
                       type="text"
                       class="input-field"
                       placeholder="Ingrese su usuario"
                       @bind="UserModel.UserName" />
            </div>

            <div class="form-group">
                <label for="password">
                    <i class="bi bi-lock-fill"></i>
                    Contraseña
                </label>
                <input id="password"
                       type="password"
                       class="input-field"
                       placeholder="Ingrese su contraseña"
                       @bind="UserModel.Password" />
            </div>

            <div class="form-buttons">
                <button type="submit" class="btn-submit">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Iniciar Sesión
                </button>

                <div class="divider">
                    <span>o</span>
                </div>

                <button type="button" class="btn-register">
                    <i class="bi bi-person-plus-fill"></i>
                    Registrar Nueva Cuenta
                </button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private void OnInvalidLogin(EditContext editContext)
    {
        var messages = editContext.GetValidationMessages();
        foreach (var message in messages)
        {
            ToastService.ShowError(message);
        }
    }
}


